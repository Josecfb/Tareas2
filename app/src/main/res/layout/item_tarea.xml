<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:padding="16dp">

    <TextView
        android:id="@+id/nombre_tarea"
        android:layout_width="300dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/h3"
        android:text="@string/tarea"
        android:onClick="editarTarea"/>
    <ImageView
        android:id="@+id/boton_terminar"
        android:layout_width="50dp"
        android:padding="10dp"
        app:showAsAction="always"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_check"
        android:background="@drawable/boton2"
        android:onClick="terminarTarea"/>

    <ImageView
        android:id="@+id/boton_borrar"
        android:layout_width="50dp"
        android:padding="10dp"
        app:showAsAction="always"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="borrarTarea"
        android:src="@drawable/ic_borrar"
        android:background="@drawable/boton2"
        android:text="Borrar Tarea" />




</LinearLayout>